{
  "name": "@fragola-ai/agentic-sdk-core",
  "version": "0.0.1-a2ui",
  "description": "Fragola is a 100% OpenAI-compatible library for building AI-first software with minimal abstractions. Fragola help you create software such as programming assistants, vertical AI SaaS products, and automation workflows through an event-driven architecture and extensible hook system. Create custom hooks or leverage community-built extensions to rapidly expand agent capabilities.",
  "main": "./dist/package/fragola.index.js",
  "module": "./dist/package/fragola.index.js",
  "types": "./dist/fragola.index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/package/fragola.index.js",
      "types": "./dist/fragola.index.d.ts"
    },
    "./store": {
      "import": "./dist/package/store.index.js",
      "types": "./dist/src/store.d.ts"
    },
    "./agent": {
      "import": "./dist/package/agent.index.js",
      "types": "./dist/src/agent.d.ts"
    },
    "./event": {
      "import": "./dist/package/event.index.js",
      "types": "./dist/src/event.d.ts"
    },
    "./hook": {
      "import": "./dist/package/hook.index.js",
      "types": "./dist/src/hook/index.d.ts"
    },
    "./hook/presets": {
      "import": "./dist/package/hook.presets.index.js",
      "types": "./dist/src/hook/presets/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "ai",
    "llm",
    "agent",
    "sdk",
    "fragola",
    "typescript",
    "events",
    "middleware",
    "customizable",
    "openai",
    "compatible"
  ],
  "author": "Fragola AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shadokan87/fragolaSDK"
  },
  "bugs": {
    "url": "https://github.com/shadokan87/fragolaSDK/issues"
  },
  "homepage": "https://fragola.ai",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@types/ajv": "^1.0.4",
    "@types/bun": "latest",
    "@types/puppeteer": "^7.0.4",
    "esbuild": "^0.25.9",
    "portkey-ai": "^3.0.1",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.9.2",
    "vitest": "^4.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@eslint/js": "^9.34.0",
    "@fragola-ai/prompt": "^1.1.0",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "@opentelemetry/sdk-node": "^0.208.0",
    "ajv": "^8.17.1",
    "eslint": "^9.34.0",
    "json-schema-to-zod": "^2.6.1",
    "nanoid": "^5.1.5",
    "openai": "6.9.0",
    "puppeteer": "^24.27.0",
    "typescript-eslint": "^8.42.0",
    "zod": "^3.25.67"
  },
  "scripts": {
    "lint": "bunx eslint .",
    "clean": "rm -rf dist",
    "build": "bun run build.ts",
    "test:build": "bun run build && cd tests && rm -rf node_modules && bun i && bunx vitest --run",
    "test": "cd tests && bunx vitest --run",
    "test:watch": "cd tests && bunx vitest",
    "proxy:start": "bunx verdaccio --config verdaccio.config.yaml",
    "pub:local": "npm publish --registry http://localhost:4873",
    "publish:prod": "npm publish --registry https://registry.npmjs.org",
    "test:release": "bash scripts/test-release.sh",
    "prepublishOnly": "bun run build"
  }
}
