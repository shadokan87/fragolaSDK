{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": [
    "fragola.index.ts",
    "store.index.ts", 
    "agent.index.ts",
    "event.index.ts",
    "hook.index.ts",
    "hook.presets.index.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build.ts"
  ]
}
